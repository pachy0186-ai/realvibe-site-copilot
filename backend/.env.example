# RealVibe Site Copilot - Environment Variables

# Application
APP_NAME="RealVibe Site Copilot API"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
DATABASE_URL=postgresql://user:password@localhost:5432/realvibe_site_copilot

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# Gmail Integration
GMAIL_CREDENTIALS_FILE=path/to/gmail-credentials.json
GMAIL_TOKEN_FILE=path/to/gmail-token.json

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# File Storage
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Vector Search
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSIONS=1536

# Agent Configuration
MAX_RETRIES=3
AGENT_TIMEOUT=300

